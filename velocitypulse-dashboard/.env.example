# ==============================================
# VelocityPulse Dashboard Environment Variables
# ==============================================

# Clerk Authentication
# Dev keys use pk_test_/sk_test_ prefix; production keys use pk_live_/sk_live_
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding/setup

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...  # Required for embedded checkout
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_STARTER_PRICE_ID=price_...
STRIPE_UNLIMITED_PRICE_ID=price_...
NEXT_PUBLIC_STRIPE_STARTER_PRICE_ID=price_...   # Client-side price IDs for plan cards
NEXT_PUBLIC_STRIPE_UNLIMITED_PRICE_ID=price_...

# Resend Email
RESEND_API_KEY=re_...
RESEND_FROM_EMAIL=VelocityPulse <noreply@velocitypulse.io>

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MARKETING_URL=https://velocitypulse.io
NEXT_PUBLIC_AGENT_DOWNLOAD_URL=https://get.velocitypulse.io/agent

# Agent Version Management
LATEST_AGENT_VERSION=1.0.0
AGENT_DOWNLOAD_URL=https://github.com/velocityeu/velocitypulse-agent/releases/latest
ENFORCE_AGENT_UPDATES=false

# Sentry (Observability) â€” optional, disabled if not set
# NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...
# SENTRY_AUTH_TOKEN=sntrys_...

# Cron Secret (required for /api/cron/* endpoints)
CRON_SECRET=your-cron-secret

# Feature Flags
ENABLE_INTERNAL_ADMIN=true
